{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug Playwright Test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/venv/bin/pytest",
            "args": [
                "--headed",
                "${file}"
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "PATH": "${workspaceFolder}/venv/bin:${env:PATH}"
            }
        }
    ]
}